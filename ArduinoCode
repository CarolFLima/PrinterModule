/*
 Example 38.2 - Sparkfun Thermal Printer Test II (COM-10438)
 http://tronixstuff.com/tutorials > chapter 38
 Based on code by Nathan Seidle of Spark Fun Electronics 2011
 */
#include <SoftwareSerial.h>
SoftwareSerial Thermal(2, 3);
int zero=0;
int heatTime = 100;
int heatInterval = 80;
char printDensity = 15; 
char printBreakTime = 15;

void setup() 
{
 Serial.begin(57600); // for debug info to serial monitor
 Thermal.begin(19200); // to write to our new printer
 initPrinter();
}
void initPrinter()
{
 //Modify the print speed and heat
 Thermal.write(27);
 Thermal.write(55);
 Thermal.write(7); //Default 64 dots = 8*('7'+1)
 Thermal.write(heatTime); //Default 80 or 800us
 Thermal.write(heatInterval); //Default 2 or 20us
 //Modify the print density and timeout
 Thermal.write(18);
 Thermal.write(35);
// int printSetting = (printDensity<<4) | printBreakTime;
 Thermal.write(zero); //Combination of printDensity and printBreakTime
 Serial.println();
 Serial.println("Printer ready"); 
}
void loop()
{
 // Centering text
 Thermal.write(27);
 Thermal.write(97);
 Thermal.write(1);
 
 // Double width and double height
 Thermal.write(29); 
 Thermal.write(33);
 Thermal.write(161);
 Thermal.println("IC-UFAL"); 
 Thermal.write(10);   // Print LF
 delay(1500);
 
 String password = "P0003";
 // Centering text
 Thermal.write(27);
 Thermal.write(97);
 Thermal.write(1);
 // Regular width and regular height
 Thermal.write(29); 
 Thermal.write(33);
 Thermal.write(zero);
 Thermal.println("Sua senha:");
 delay(1500);
 
 // Centering text
 Thermal.write(27);
 Thermal.write(97);
 Thermal.write(1);
 Thermal.println("----------");
 delay(1500);

 // Centering text
 Thermal.write(27);
 Thermal.write(97);
 Thermal.write(1);
 // Double width and double height
 Thermal.write(29); 
 Thermal.write(33);
 Thermal.write(161);
 Thermal.println(password);
 delay(1500);

 // Centering text
 Thermal.write(27);
 Thermal.write(97);
 Thermal.write(1);
 Thermal.println("----------");
 delay(1500);
 Thermal.write(10);   // Print LF
 Thermal.write(10);   // Print LF
 
 do { } while (1>0); // do nothing
}
